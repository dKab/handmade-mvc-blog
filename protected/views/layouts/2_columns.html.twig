{% extends "main.html.twig" %}
{% block styles %}
 {{ parent() }}
<link rel="stylesheet" href="/css/2-columns.css">
{% endblock %}

{% block sidebar %}
            {% if categories is not empty %}
<p style="font-size: larger; background: wheat; margin-top: 0; padding: 5px;">  категории </p>
            <ul>
                {% for c in categories %}
                <li>
                    <a href="{{ "/" ~ controller ~ "/list?category=" ~ c.name }}">{{ c.name ~ " - " ~ c.num_posts }}</a>
                </li>
                {% endfor %}
            </ul>
<hr>
        {% endif %}
{% endblock %}
