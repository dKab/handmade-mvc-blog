{% if user is defined %}
  {% set controller = 'admin' %}
{% else %}
  {% set controller = 'index' %}
{% endif %}
<!DOCTYPE html>
<html>
    <head>
        <title>
{% block title title|default('Привет!') %}
            - Алёнин блог
        </title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        {% block styles %}
        <style type="text/css">
            img {
                max-width: 100%;
            }
            html, body {
                height:100%;
                margin: 0;
                padding: 0;
                background:  black;
            }
            .post_title {
                font-size: 1.5em;
            }

            #nav { 
                background-color:   indianred;
                text-align: center;
               /* padding: 20px; */
                height: 50px;
                border-bottom: 4px solid maroon;
                font-weight: 600;  
                position: fixed;
                top: 0;
                width: 100%;
            }
            #nav a {
                color: wheat;
                display: block;
                height: 100%;
                width: 100%;
            }
            #nav a:hover {
                color: white;
                text-decoration: none;
            }
            #nav ul {
                float: left;
                height: 100%;
            }
            #nav li {
                float: left;
                height: 100%;
                min-height: 100%;
                line-height: 50px;
                padding: 0 10px;
            }
            #nav li:hover {
                background:  firebrick;
            }
            #nav li.active {
                background:  maroon;
            }
            #footer {
                clear: both;
                height:50px; 
                background: wheat;
                text-align: center;
                color: black;
                padding-top: 20px;
                font-size: smaller;

            }
            ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }
            a {
                text-decoration: none;
                color: maroon;
            }
            a:hover {
                text-decoration: underline;
            }
            a:visited {
                color: maroon;
            }
            body {
                font-family: Century-gothic, sans-serif;
            }
            hr {
                border: none;
                height: 1px;
                background: lightgray;
            }
            .time {
                float: right;
                font-size: smaller;
                color: grey;
                font-style: italic;
            }
            .comments_count {
                float: right;
                color: grey;
                font-style: italic;
                font-size: 0.8em;
            }
            #pagination {
                margin: 10px;
                float: right;
            }
            #pagination ul {
                list-style: none;
            }
            #pagination li {
                display: inline;
            }
            #content {
                width: 980px;
                margin: auto;
                padding: 0 20px;
            }
            .page-buffer {
                height: 50px;
            }
            #wrapper {
                margin-bottom: -50px;
                min-height: 100%;
                background: cornsilk;
                overflow: hidden;               
            }
            input, select {
                margin: 5px;
            }
            .yashare-auto-init {
                float: right;
            }
            #image {
                height: 400px;
            }
        </style>
        {% endblock %}

        {% block javascript %}
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
{% if user is defined %}
        <div id="nav">
            <ul style="list-style: none">
                <li {% if active is defined and active == "indexAction" %} class="active" {% endif %}><a href="{{ "/" ~ controller }}">главная</a></li>
                <li {% if active is defined and active == "addAction" %} class="active" {% endif %}><a href="/admin/add">добавить запись</a></li>
                <li  {% if active is defined and active == "manageAction" %} class="active" {% endif %}><a href="/admin/manage">управление записями</a></li>
                <li {% if active is defined and active == "approveCommentsAction" %} class="active" {% endif %}><a href="/admin/approveComments">комментарии ({{ pendingNum|default('0') }})</a></li>
                <li><a href="/admin/logout">выход</a></li>
            </ul>
        </div>
        {% endif %}
        <div id="wrapper" {% if user is defined %} style="margin-top: 50px;" {% endif %}>
            {% block image %}
            {% endblock %}
            <div id="content">                
            {% block header  %}
                <h3>{{ block('title') }} {% if total is defined %} ({{ total }}) |  <span id="home">Вернуться <a href="{{ "/" ~ controller ~ "/list" }}">на Главную</a></span> </h3> {% endif %}</h3>
            {% endblock %}
              {% if feedback is defined %}
                {{ feedback }} <br />
                            {% endif %}
            {% block content %}
            {% endblock %}
            </div>
            <div id="sidebar">
         {% block sidebar %}
         {% endblock %}
            </div>
            <div class='page-buffer'></div>
        </div>
        <div id="footer">
            {{ "now"|date("Y") }} Powered by PHP 5 & Twig
        </div>
    </body>
</html>
