{% if user is defined %}
  {% set controller = 'admin' %}
{% else %}
  {% set controller = 'index' %}
{% endif %}
<!DOCTYPE html>
<html>
    <head>
        <title>
{% block title title|default('Привет!') %}
- Алёнин блог
        </title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        {% block styles %}
        <style type="text/css">
            #nav { 
                background: #CCC;
                padding: 20px;
                margin-bottom: 10px;
            }
            #nav li {
                display: inline;
            }
            #footer {
                margin-top: 10px;
                clear: both;
                background: silver;
            }
            ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }
        </style>
        {% endblock %}
        
        {% block javascript %}
             <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        {% endblock %}
    </head>
    <body>
        <div id="nav">
                <ul style="list-style: none">
                    <li><a href="{{ "/" ~ controller }}">Все записи</a></li> | 
                    {% if user is defined %}
                        <li><a href="/admin/add">Добавить запись</a></li> | 
                        <li><a href="/admin/manage">Управление записями</a></li> | 
                        <li><a href="/admin/approveComments">Утверждение комментариев ({{ pendingNum|default('0') }})</a></li> | 
                        <li><a href="/admin/logout">Выход</a></li>
                    {% else %}
                        <li><a href="/index/login">Вход</a></li>
                    {% endif %}
                </ul>
        </div>
        <div id="wrapper">
          <div id="content">
            {% if user is not defined %}
            Приветствую вас в своём крутейшем бложике!!!
            {% endif %}
            
            <h2>{{ block('title') }}</h2>
            
            {% if feedback is defined %}
                {{ feedback }} <br />
            {% endif %}
                
            {% block content %}
            {% endblock %}
          </div>
             <div id="sidebar">
         {% block sidebar %}
         {% endblock %}
                 </div>
        </div>
        <div id="footer" style="height: 50px; text-align: center;">
            footer
        </div>
    </body>
</html>
